<%= form_for(instituico) do |f| %>
  <% if instituico.errors.any? %>
<center>
  <div id="error_explanation" class="alert alert-danger" style="width: 500px">
      <h2><%= pluralize(instituico.errors.count, "erro(s)") %> encontrado(s):</h2>

      <ul>
      <% instituico.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
  </div>
</center>
  <% end %>

  <br>
  <div class="container-fluid col-xl-4 rounded border border-secondary"  style="background-color: #FAFAFA;">
  <br>
    <div>
      <h2 align="center" class="enunciado">Instituição</h2>
    </div>
    <br>
    <fieldset>
        <div class="form-group row">         
          <label class="col-sm-4 col-form-label font-weight-bold textolabels">Nome da Instituição</label>
          <div class="col-md-8">
            <%= f.text_field :nome_instituicao, class: "form-control"%>
          </div>
        </div>
        <div class="form-group row">         
          <label class="col-sm-4 col-form-label font-weight-bold textolabels">Id Cliente Parceiro</label>
            <div class="col-md-8">
              <%= f.number_field :id_cliente_parceira, {in: -1...1000000000, class: "form-control"}%>
            </div>
         </div> 
         <div class="form-group row">         
          <label class="col-sm-4 col-form-label font-weight-bold textolabels">Código Produto </label>
            <div class="col-md-8">
              <%= f.number_field :codigo_produto, {in: -1...10000, class: "form-control"}%>
            </div>
          </div>
          <div class="form-group row">         
            <label class="col-sm-4 col-form-label font-weight-bold textolabels">Código Empresa Parceira</label>
             <div class="col-md-8"> 
                <%= f.number_field :codigo_empresa_parceira, {in: -1...100,  class: "form-control"}%>
            </div>
          </div>
          <br>

          <div class="footer" align="center">
            <%= f.submit "Salvar", class:"btn btn-primary"%>
            <%=link_to 'Cancelar', instituicos_path, class: 'btn btn-warning'%>
          
        </fieldset>
      </form>
      <br>   
    </div>
  </div>
  <% end %>

