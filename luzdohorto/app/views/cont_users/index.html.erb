<div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="page-header">
          <h1 align="center" class="enunciado">Lista de Usuários</h1>
        </div>
      </div>
    </div>
        
  <br>
  <br>
  <br>
<div class="row">
    <div class="col-lg-12">
      <table class="table table-striped">
        <thead style="height: 15px;">
          <tr class="titulotabela" >  
            <th style="border-color: black; text-align: center; height: 15px"><p align="center">Usuário</p></th>
            <th style="border-color: black; text-align: center;"><p align="center">Tipo de Usuário</p></th>
            <th style="border-color: black; text-align: center;"><p align="center">E-Mail</p></th>                                         
          </tr> 
        </thead>
        <tbody>
        <% @users.each do |user| %>
          <tr class="conteudotabela">              
            <td align="center"><%= user.username %></td>
            <td align="center"><%= user.role %></td>                                                        
            <td align="center"><%= user.email %></td>  
          </td>
        </tr>
          <% end %> 
      </tbody>                
    </table>
   
  </div>
