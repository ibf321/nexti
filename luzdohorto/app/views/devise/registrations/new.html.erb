  <header style="text-align: center;">
    <h1>Cadastrar Usuário</h1>  
  </header>
  <br>


<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>


<div class="container-fluid col-10">
  <div class="container  col-md-offset-4 col-md-4">
        <div class="form-group">
          <%= f.text_field :username, autofocus: true, placeholder: "Digite o nome do usuário", class: "form-control"  %>
        </div> 
        <div class="form-group">
          <%= f.text_field :email, autofocus: false, placeholder: "Digite o E-mail do usuário", class: "form-control"  %>
        </div> 
        <div class="form-group">
          <% if @minimum_password_length %>
          <% end %>
          <%= f.password_field :password, autocomplete: "off" , placeholder: "Digite uma senha de no minimo 6 digitos", class: "form-control" %>
        </div>
        <div class="form-group" >
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: "Digite a senha novamente", class: "form-control"  %>
          </div>
        </div>
      <div align="center" >
        <br>
        <%= f.submit "Cadastrar", class: 'btn btn-primary btn-md'%>
        <% end %>
      </div>   
