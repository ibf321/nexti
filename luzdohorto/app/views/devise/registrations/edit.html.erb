<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
<%= devise_error_messages! %>

<div class="container-fluid col-xl-4 rounded border border-secondary" style="background-color: #FAFAFA;">
<h1 align="center">Editar Perfil</h1>
<br>
 <form >        
        
          <div class="form-group row" >            
            <label class="col-sm-3 col-form-label font-weight-bold">Email</label>
              <div class="col-md-8">
                <%= f.text_field :email, autofocus: true, class: "form-control"  %>
              </div>
         </div>
        
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
        <div class="form-group row" >            
            <label class="col-sm-3 col-form-label font-weight-bold">Nova Senha </label>
            <div class="col-md-8">
              <%= f.password_field :password, autocomplete: "off", placeholder: "Deixe em branco se não quiser mudar", class: "form-control" %>
            </div> 
        </div>
        <div class="form-group row" >            
            <label class="col-sm-3 col-form-label font-weight-bold">Inserir Novamente</label>
            <% if @minimum_password_length %>
            <% end %>
            <div class="col-md-8">
              <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
        </div>
        <div class="form-group row" >            
            <label class="col-sm-3 col-form-label font-weight-bold">Senha Atual</label>
            <div class="col-md-8">
              <%= f.password_field :current_password, placeholder: "Precisamos da Senha atual para confirmar as modificações", class: "form-control"%>
            </div>
        </div>
      
      <div class="page-header" align="center">
        <%= f.submit "Editar", class: "btn btn-sm btn-primary" %>
        <%= link_to "Cancelar Conta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: 'btn btn-sm btn-danger' %>
      </div>
    </form>    
  <br>
  </div>
</div>
</fieldset>
</div>
<% end %>